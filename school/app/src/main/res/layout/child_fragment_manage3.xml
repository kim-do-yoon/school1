<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:background="@drawable/button_time"
            android:text="문학 1 - ㅇㅇㅇ 선생님" />
        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="상세"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:background="@drawable/button_time"
            android:text="수학 1 - ㅇㅇㅇ 선생님" />
        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="상세"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:background="@drawable/button_time"
            android:text="영어 1 - ㅇㅇㅇ 선생님" />
        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="상세"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:background="@drawable/button_time"
            android:text="과학 1 - ㅇㅇㅇ 선생님" />
        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="상세"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:background="@drawable/button_time"
            android:text="체육 1 - ㅇㅇㅇ 선생님" />
        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="상세"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/text"
            android:src="@drawable/baseline_add_circle_outline_black_24dp"
            />

    </LinearLayout>
</LinearLayout>
