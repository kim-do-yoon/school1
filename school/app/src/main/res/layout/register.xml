<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    // 아이디 폼
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아아디"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/idText"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="4~10 자리의 영문 및 숫자"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/validateButton"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/custom"
            android:text="중복확인" />

    </LinearLayout>

    // 비밀번호 폼
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:id="@+id/pwText"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:background="@drawable/border"
        android:ems="16"
        android:hint="영어, 숫자, 특수문자 중 8~16자리"
        android:inputType="textPassword" />

    // 비밀번호 확인 폼
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:id="@+id/pwText1"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:background="@drawable/border"
        android:ems="16"
        android:hint="영어, 숫자, 특수문자 중 8~16자리"
        android:inputType="textPassword" />

    // 이름 폼
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="이름을 입력하세요"
        android:inputType="textPersonName" />

    // 전화번호 폼
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phoneText"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:ems="15"
            android:hint="전화번호 -빼고 11자리"
            android:inputType="text|phone" />

        <Button
            android:id="@+id/validateButton1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/custom"
            android:text="중복확인" />
    </LinearLayout>

    // 학교 폼
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학교"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/schoolText"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="학교입력"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/schoolButton"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/custom"
            android:textSize="15dp"
            android:text="검색" />
    </LinearLayout>

    // 학번 폼
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학번"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/numText"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:ems="2"
            android:inputType="text|number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학년"
            android:textSize="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:id="@+id/numText1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:layout_marginLeft="10dp"
            android:ems="2"
            android:inputType="text|number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반"
            android:textSize="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:id="@+id/numText2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:layout_marginLeft="10dp"
            android:ems="2"
            android:inputType="text|number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="번"
            android:textSize="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat" />
    </LinearLayout>

    // 버튼
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/RegisterButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@drawable/custom"
            android:text="회원가입" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>